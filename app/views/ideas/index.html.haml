.container-fluid.page.page-block
  .masonry-container.centered.transitions-enabled.infinite-scroll.clearfix
    - @ideas.each do |idea|
      .box.col3
        %h2= link_to idea.title, idea
        / %p= raw idea.get_likes.count
        %p= raw idea.body
        %p
          Created on: #{formatted_date(idea.created_at)}

        %br 
          = link_to "<i class='fa fa-thumbs-o-up fa-2x'></i>".html_safe, like_idea_path(idea), method: :put
          /= idea.inspect
          /#{idea.votes.try}
          #{idea.votes_for.try(:size)}
        %p
          = link_to "<i class='fa fa-user fa-2x'></i>".html_safe, idea_path(idea)
          #{idea.user.try(:full_name)}
        %p
          - idea.tags.each do |tag|
            = link_to "#{tag.name}, ", tag_path(tag)
        %br/


